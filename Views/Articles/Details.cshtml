@using Microsoft.AspNetCore.Authentication

@model dotnetThree.Models.ArticleComment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Article.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
    </dl>
</div>
<div>
    @if(@User.Identity.IsAuthenticated)
    {
    <a asp-action="Edit" asp-route-id="@Model.Article.Id">Edit</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>

@if(@User.Identity.IsAuthenticated)
{
    <partial name="_AddComment" />
} 
else
{
    <a asp-area="Identity" asp-page="/Account/Login"  class="btn btn-primary" >Login</a> <span>To add your own comments to this article</span>
}

<partial name="_viewComments" />

